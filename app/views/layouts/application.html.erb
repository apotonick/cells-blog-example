<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <%= flash[:notice] %>
    <% if logged_in? %>
    Logged in as <%= current_user.login %> |
      <%= link_to "New Post", new_post_path %>
    <% else %>
      <%= link_to "Login", login_path %>
    <% end %>
    
    <%= yield %>
  </body>
</html>
