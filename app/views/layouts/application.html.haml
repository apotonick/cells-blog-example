!!!
%html
  %head
    %title "The Incredible Cells Blog"
    
    = javascript_include_tag :defaults
    = javascript_include_tag "jquery-1.4.2.min.js"
    = javascript_include_tag "jquery-ui-1.8.6.custom.min.js"
    = csrf_meta_tag
    
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag "smoothness/jquery-ui-1.8.6.custom"
    
  %body.bp.two-col
    #container
      #header
        = image_tag "cells_logo_by_jeroen_clerix.jpg"
        %h1 The Incredible Cells Blog
      
      #sidebar
        = render_cell :posts, :display
      
      #content
        = flash[:notice]
        
        = yield
